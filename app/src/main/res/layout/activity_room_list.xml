<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.RoomList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--    轮播图-->
        <ImageButton
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/roomphoto"
            android:layout_width="match_parent"
            android:background="#E1DEDE"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="房间名称："
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/roomname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:focusable="false"
                    android:longClickable="false"
                    android:gravity="left"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="房间号码："/>
                <EditText
                    android:id="@+id/roomid"
                    android:layout_width="wrap_content"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="房间类型："/>
                <EditText
                    android:id="@+id/roomtype"
                    android:layout_width="wrap_content"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="left"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="居住人数："/>
                <EditText
                    android:id="@+id/roomlivein"
                    android:layout_width="wrap_content"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="房间价格："/>
                <EditText
                    android:id="@+id/roomprice"
                    android:layout_width="wrap_content"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="left"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:text="床型："/>
                <EditText
                    android:id="@+id/roombed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:focusable="false"
                    android:longClickable="false"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:text=""
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="设施服务："/>
        <EditText
            android:id="@+id/roomservice"
            android:layout_width="match_parent"
            android:focusable="false"
            android:longClickable="false"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text=""
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="地理位置："/>
        <EditText
            android:id="@+id/roomaddress"
            android:focusable="false"
            android:longClickable="false"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text=""
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="入住须知："/>
        <EditText
            android:focusable="false"
            android:longClickable="false"
            android:id="@+id/roomtip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text=""
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/modification5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="修 改"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/save5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="保 存"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/delete5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="删 除"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>